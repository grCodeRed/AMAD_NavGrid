<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavGrid.NewPage"
             Title="NewPage">
    <Grid RowDefinitions=".25*,.25*,.25*,.25*"
          ColumnDefinitions=".5*,.5*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        <Label BackgroundColor="Blue"
               Grid.Row="0"
               Grid.Column="0"/>
        <Label BackgroundColor="Red"
               Grid.Row="0"
               Grid.Column="1"/>
        <Label BackgroundColor="HotPink"
               Grid.Row="1"
               Grid.Column="0"/>
        <Label BackgroundColor="Green"
               Grid.Row="1"
               Grid.Column="2"/>
        <Label BackgroundColor="Purple"
               Grid.Row="2"
               Grid.Column="0"/>
        <Label BackgroundColor="Goldenrod"
               Grid.Row="2"
               Grid.Column="1"/>
        <Button Text="Go Back"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Clicked="GoBackClick"/>

    </Grid>
</ContentPage>